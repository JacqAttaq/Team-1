!!!

- content_for :main_body do
  = render 'layouts/navbar'
  .row
    .medium-3.columns.left-sidebar
      = render partial:'shared/left_sidebar'
    .medium-6.columns.main-content-area
      = yield
    .medium-3.columns.right-sidebar
      %h4
      = render partial:'shared/right_sidebar'

%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Week4group
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  - if flash.keys.any?
    - flash_type, flash_title = flash.first
    %body{data: {'flash-type'=>"#{flash_type}", 'flash-title'=>"#{flash_title}"} }
      = content_for :main_body
  - else
    %body
      = content_for :main_body
